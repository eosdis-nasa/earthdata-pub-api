{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [ "dynamodb:*" ],
      "Effect": "Allow",
      "Resource": ["arn:aws:dynamodb:${region}:${account_id}:table/*"]
    },
    {
      "Action" : [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_queue_arn}"]
    },
    {
      "Action" : [
          "sns:Publish"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_topic_arn}" ]
    }
  ]
}

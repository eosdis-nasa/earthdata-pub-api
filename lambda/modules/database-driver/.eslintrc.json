{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": ["node_modules/"],
    "rules": {
      "comma-dangle": ["error", "never"],
      "no-param-reassign": ["error", { "props": false }],
      "no-console": ["error", { "allow": ["info", "error"]}]
    }
}

{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [ "dynamodb:*" ],
      "Effect": "Allow",
      "Resource": ["arn:aws:dynamodb:${region}:${account_id}:table/*"]
    },
    {
      "Action" : [
          "sns:Subscribe",
          "sns:Receive",
          "sns:Publish"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_topic_arn}" ]
    },
    {
      "Action" : [
        "sqs:SendMessage"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_queue_arn}"]
    }
  ]
}

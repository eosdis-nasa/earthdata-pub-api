{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [ "dynamodb:*" ],
      "Effect": "Allow",
      "Resource": ["arn:aws:dynamodb:${region}:${account_id}:table/*"]
    },
    {
      "Action" : [
        "sns:Subscribe",
        "sns:Receive"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_topic_arn}" ]
    },
    {
      "Action" : [
        "sns:Publish"
      ],
      "Effect" : "Allow",
      "Resource" : [ "${edpub_metrics_topic_arn}" ]
    }
  ]
}
